class Solution {
    public int characterReplacement(String s, int k) {
        int[] freq = new int[26];
        int result = 0, highestFreq = 0, left = 0, windowLen = 0;

        for(int right = 0;right < s.length();right++){
            // increase the frequency of character
            freq[s.charAt(right) - 'A']++;

            // track which has highest frequency
            highestFreq = Math.max(highestFreq, freq[s.charAt(right) - 'A']);

            // shrink the window size, when window size is greater.
            // the logic is windowLen - highest freq like 6 - 3 = 3 > k=2 true 1 character ahead so shrink the lenght.
            while((right - left + 1) - highestFreq > k){
                freq[s.charAt(left) - 'A']--;
                left++;
            }

            // update result with valid window size
            result = Math.max(result, right - left + 1);
        }
        return result;
    }
}
